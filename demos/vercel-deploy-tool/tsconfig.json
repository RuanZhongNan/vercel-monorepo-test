{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"rootDir": ".",
		"rootDirs": [
			"src",
			"tests"
		],
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.test.ts"
	]
}