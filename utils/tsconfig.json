{
	"compilerOptions": {
		"declaration": true,
		"allowImportingTsExtensions": true,
		"emitDeclarationOnly": true,
		"outDir": "types",
		"checkJs": true,
		"module": "nodenext",
		"target": "ESNext",
		"moduleResolution": "NodeNext",
		"types": [
			"typedoc",
			"typedoc-plugin-markdown"
		]
	},
	"include": [
		"src/**/*.ts",
	],
	"exclude": [
		"typedoc.config.cjs"
	]
}