{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		// 应打包警告要求，提供该配置。
		// "baseUrl": "./",
		// 路径别名设置
		"paths": {
			"@packages/*": [
				"./packages/*/src"
			],
			"@packages-docs/*": [
				"./packages/*/docs"
			],
			"@ruan-cat-vercel-monorepo-test/vuepress-preset-config": [
				"./packages/vuepress-preset-config/src"
			],
			// 提供两种路径 该路径允许独立查询里面的子模块
			// FIXME: 失效，该配置无法实现查询子模块。
			// "utils/*": [
			// 	"./utils/src"
			// ],
			// 提供两种路径 该路径直接使用根目录下整合好的入口
			"utils": [
				"./utils/src/index.ts"
				// "./utils/src/*"
			],
		}
	},
	"include": [
		// Change the file extension from ".js" to ".ts"
		"./packages/**/*.ts",
		"./packages/**/*.js",
		"./packages/*/**/.vuepress/**/*.ts",
		"./packages/**/src",
		"./utils",
		// 根目录下的配置，也应该纳入管控
		"./prettier.config.js",
		"./eslint.config.js"
	],
	"exclude": [
		"**/dist",
		"./packages/monorepo-3/typedoc.config.js"
	]
}